# Install as /usr/lib/systemd/system/flycatcher.service

[Unit]
Description=IP scan logger
Documentation=man:flycatcher(8)
After=network.target

[Service]
Type=forking
PIDFile=/var/run/flycatcher.pid
EnvironmentFile=/etc/sysconfig/flycatcher
ExecStart=@prefix@/sbin/flycatcher $OPTIONS -i $INTERFACE
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
