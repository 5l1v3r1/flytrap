# Install as /etc/logrotate.d/flytrap to enable log rotation
/var/log/flytrap.log {
    # Rotate daily, keep four weeks
    daily
    rotate 28

    # Compress rotated logs
    compress
    compresscmd @Z@
    uncompresscmd @UNZ@
    
    # signal flytrap(8) after rotating
    sharedscripts
    postrotate
        kill -HUP `cat /var/run/flytrap.pid`
    endscript
}
